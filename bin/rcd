#!/bin/zsh

homefile=(
basic.vim
.vimrc
.zshrc
.p10k.zsh
.npmrc
.tmux.conf
)

for i in $homefile
do
	cp -f ~/$i ~/dotfile-and-script/
done

# cp -f ~/basic.vim ~/dotfile-and-script/
# cp -f ~/.vimrc ~/dotfile-and-script/
# cp -f ~/.zshrc ~/dotfile-and-script/
# cp -f ~/.p10k.zsh ~/dotfile-and-script/
# cp -f ~/.npmrc ~/dotfile-and-script/
# cp -f ~/.tmux.conf ~/dotfile-and-script/

sudo cp -f /usr/local/bin/* ~/dotfile-and-script/bin

cp -rf ~/.config/i3 ~/dotfile-and-script/.config/i3
cp -rf ~/.config/ranger ~/dotfile-and-script/.config/ranger

cp -f ~/.tmuxp/* ~/dotfile-and-script/.tmuxp

place=$(pwd)
when=$(date "+%Y-%m-%d %H:%M:%S")
cd $HOME/dotfile-and-script/
git add -A -f *
git commit -m "${when} update" -a
git push
cd $place

exit 0
